@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi - BlogID: @ViewBag.v</h4>
                        <p class="card-subtitle mb-4">
                            Bloglarla ilgili o bloga yapılmış olan yorum listesini bu sayfadan görebilirsiniz. İlgili yorumları kaldırabilir ya da tekrar aktif hale getirebilirsiniz. Bunun için yorumların altında yer alan butonları kullanabilirsiniz.
                        </p>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <p><i>Daha önce eklenen herhangi bir blog <b>bulunamadı.</b> Aşağıdaki kısımları doldurarak yeni bir blog ekleyebilirsiniz.</i></p>
                            </div>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                count++;
                                <div class="col-md-4">
                                    <div class="card">
                                        <h5 class="card-header">Yorum: @count</h5>
                                        <div class="card-body">
                                            <h4 class="card-title">@item.Name</h4>
                                            <p class="card-text">
                                                @item.Content
                                            </p>
                                            <div class="d-flex justify-content-end mt-4 none-border">
                                                <a href="#" class="btn btn-primary waves-effect waves-light mr-3">Yorumu Kaldır</a>
                                                <a href="/Admin/AdminBlog/Index/" class="btn btn-outline-primary">Geri Dön</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>