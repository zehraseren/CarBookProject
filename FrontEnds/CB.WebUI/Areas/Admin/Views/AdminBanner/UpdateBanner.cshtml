@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Banner Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Banner alanında veri güncellemeyi aşağıdaki panelden yapabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="BannerId" />
                                <label for="exampleInputName">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputName1" asp-for="Title" placeholder="Marka adı yazınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription1" asp-for="Description" placeholder="Açıklamayı yazınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Video URL</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl1" asp-for="VideoUrl" placeholder="Video'nun YouTube Enbed linkini giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription1" asp-for="VideoDescription" placeholder="Video açıklamasını buraya yazınız">
                            </div>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success mr-3">Banner Bilgisini Kaydet</button>
                                <a href="/Admin/AdminBanner/Index/" class="btn btn-outline-danger mr-0">Vazgeç</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>