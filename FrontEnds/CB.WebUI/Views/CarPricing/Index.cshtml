@model List<ResultCarPricingListWithModelDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="car-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th class="bg-primary heading">Günlük</th>
                                <th class="bg-dark heading">Haftalık</th>
                                <th class="bg-black heading">Aylık</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>

                                <tr class="">
                                    <td class="car-image"><div class="img" style="background-image:url(@item.coverImageUrl);"></div></td>
                                    <td class="product-name">
                                        <h3>@item.Model</h3>
                                        <p class="mb-0 rated">
                                            <span>rated:</span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                        </p>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Hemen Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency"></small> @item.DailyPrice ₺</span>
                                                <span class="per">/günlük</span>
                                            </h3>
                                            <span class="subheading">90₺/günlük yakıt ek ücreti</span>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Hemen Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency"></small>@item.WeeklyPrice ₺</span>
                                                <span class="per">/haftalık</span>
                                            </h3>
                                            <span class="subheading">500₺/haftalık yakıt ek ücreti</span>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Hemen Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency"></small>@item.MonthlyPrice ₺</span>
                                                <span class="per">/aylık</span>
                                            </h3>
                                            <span class="subheading">2000₺/aylık yakıt ek ücreti</span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>