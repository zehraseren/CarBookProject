<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Araç Marka Sayıları</h4>
            <div style="height: 260px;">
                <canvas id="myChart2" height="220px"></canvas>
                <div id="tooltip" style="position: absolute; display: none; background-color: rgba(0, 0, 0, 0.7); color: white; padding: 5px; border-radius: 4px;"></div>
                <script>
                    var values = document.getElementById("myChart2").getContext('2d');
                    var myChart = new Chart(values, {
                        type: 'pie',
                        data: {
                            labels: ['Volkswagen','Range Rover','Mercedes','BMW','Porsche', 'Audi'],
                            datasets: [{
                                label: "Marka Grafik Listesi",
                                data: [14, 11, 4, 10, 6, 3],
                                backgroundColor: [
                                    'rgb(128, 0, 128, 0.7)',
                                    'rgb(105, 105, 105, 0.7)',
                                    'rgb(25, 25, 112, 0.7)',
                                    'rgb(0, 49, 53, 0.7)',
                                    'rgb(0, 128, 0, 0.7)',
                                    'rgb(0, 139, 139, 0.7)',
                                ],
                                borderColor: [
                                    'rgb(128, 0, 128)',
                                    'rgb(105, 105, 105)',
                                    'rgb(25, 25, 112)',
                                    'rgb(0, 49, 53)',
                                    'rgb(0, 128, 0)',
                                    'rgb(0, 139, 139)',
                                ],
                                borderWidth: 1,
                                hoverOffset: 10, // Hover efektiyle 3D benzeri etki
                            }]
                        },
                        options: {
                            plugins: {
                                tooltip: {
                                    enabled: true, // Tooltip gösterimi etkin
                                    backgroundColor: 'rgba(0, 0, 0, 0.7)', // Tooltip arka plan rengi
                                    borderColor: 'rgba(255, 255, 255, 0.8)', // Tooltip kenarlık rengi
                                    borderWidth: 1, // Tooltip kenarlık kalınlığı
                                },
                            },
                            responsive: true,
                            maintainAspectRatio: false,
                            rotation: Math.PI / 4, // Grafik içeriği döndürme
                            cutout: '60%', // İç kısmı boş bırakma
                            animation: {
                                animateRotate: true, // Dönme animasyonu
                                animateScale: true, // Ölçekleme animasyonu
                            },
                        }
                    });
                </script>
            </div>
            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>12</h4>
                    <p class="text-muted mb-0">Araç Sayısı</p>
                </div>
                <div class="col-6">
                    <h4>13</h4>
                    <p class="text-muted mb-0">Marka Sayısı</p>
                </div>
            </div>
        </div>
    </div>
</div>
